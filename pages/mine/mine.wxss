.mine_head {
  position: relative;
  width: 100%;
  display: flex;
  height: 200rpx;
  background: #e6b8af;
  border-bottom-left-radius: 100%;
  border-bottom-right-radius: 100%;
}

.mine_info {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 100rpx 40%;
  width: 20%;
}

.user_icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.user_name {
  color: #000;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.mine_list {
  position: relative;
  width: 100%;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  /* background: #d9d9d9; */
}

.mine_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 70rpx;
  /* background:#d9d9d9;  *//* border-bottom:solid 1rpx #e6e6e6; */
  line-height: 70rpx;
  font-size: 40rpx;
  padding-left: 20rpx;
  color: #fff;
  box-sizing: content-box;
  text-align: left;
  border-radius: 0;
  background-color: #fff;
}

.mine_item::after {
  border: none;
}

.item_name {
  /* width: 85%; */
  font-size: 30rpx;
  color: #000;
  width: 75%;
  padding-left: 30rpx;
}

.item_img {
  width: 60rpx;
  height: 60rpx;
  padding-top: 6rpx;
}
