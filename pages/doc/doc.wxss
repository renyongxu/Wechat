.info {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #e6e6e6;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.doc_box {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  align-items: center;
  border-radius: 50rpx;
  background: #669;
  height: 800rpx;
}

.doc_name {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 50rpx;
  font-size: 35rpx;
  border-bottom: solid 1rpx #e6e6e6;
}

.v_name {
  width: 40%;
}

.ipt_name {
  width: 70%;
  height: 70rpx;
}

.doc_gender {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
  font-size: 35rpx;
  border-bottom: solid 1rpx #e6e6e6;
}

.pk_gender {
  width: 50%;
  height: 70rpx;
  text-align: right;
  color: #e6e6e6;
  line-height: 70rpx;
  padding-right: 22rpx;
}

.pk_city {
  width: 50%;
  height: 70rpx;
  text-align: right;
  color: #e6e6e6;
  line-height: 70rpx;
  padding-right: 22rpx;
}

.img {
  width: 60rpx;
  height: 60rpx;
  /* padding-top:6rpx; */
}

.doc_save {
  width: 50%;
  margin-top: 50rpx;
  align-items: center;
  background: #a4c2f4;
  padding: 20rpx;
  text-align: center;
  border-radius: 10rpx;
}
